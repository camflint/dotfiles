# Editing.
alias vim=nvim
alias v=vim
alias fm='vifm .'

# Files.
alias f=find
alias fd='fd --hidden --no-ignore'
alias rg='rg --hidden --ignore-case'
alias rgp='rg --hidden --ignore-case --color=never'  # "plain" ripgrep
alias cat=bat
alias ls='exa'
alias la='ls -a'
alias ll='ls -l'
alias lla='ls -al'

# Git.
alias ga='git add'
alias gaa="git add '*'"
alias gamend='git commit --amend -a -C HEAD'
alias gap='git add -p'
alias gb='git branch'
alias gc='git commit'
alias gcm='git commit -m'
alias gcp='git cherry-pick'
alias gcpn='git cherry-pick -n'
alias gd='git diff'
alias gdc='git diff --cached'
alias gds='git diff --staged'
alias gdt='git difftool'
alias gf='git fetch'
alias gg='git grep -n -i'
alias gl='git l'
alias glm='git lm'
alias gls='git ls-files --exclude-standard'
alias gmb='git merge-base'
alias gmt='git mergetool'
alias go='git checkout'
alias gop='git checkout -p'
alias gp='git pull'
alias gpop='git pop'
alias gpp='git push'
alias gppu='git push -u'
alias gr='git restore'
alias grebase='git rebase'
alias grs='git restore --staged'
alias gs='git status'
alias gshow='git show'
alias gstash='git stash'
alias gsub='git submodule'
alias gvv='git remote -vv'
alias gx='git reset'
alias gxp="git reset 'HEAD^'"

# Github.
alias hpr='gh pr create'

function gob() {
  name="$1"; shift
  git checkout -b $name --no-guess $*
}

# Docker.
alias d=docker
alias dc='docker container'

# Tmux.
alias tn='tmux new-session -s'
alias nater='tmuxinator'

# Development misc.
alias mochag='mocha -g'
alias mochaf='mocha -f'
alias isodate='date +%Y-%m-%dT%H:%M:%S%z'
alias isodateutc='date -u +"%Y-%m-%dT%H:%M:%SZ"'

# Nativefier
#  Other options to specify:
#   --name <name>
#   --icon <path-to-png>
#   <targetUrl>
#   /Applications
alias nativefier='nativefier --fast-quit --hide-window-frame --maximize --single-instance'

# Misc.
alias ptpython="ptpython --config-dir='${HOME}/.config/ptpython'"
alias rec='asciinema rec'

viminfo () { vim -R -M -c "Info $1 $2" +only }
alias info=viminfo
