# Editing.
alias vim=nvim
alias v=vim
alias fm='vifm .'

# Files.
alias f=find
alias rg='rg --hidden --smart-case'
alias ls='exa'
alias la='ls -a'
alias ll='ls -l'
alias lla='ls -al'

# Git.
alias ga='git add'
alias gap='git add -p'
alias gb='git branch'
alias gc='git commit'
alias gcm='git commit -m'
alias gcp='git cherry-pick'
alias gcpn='git cherry-pick -n'
alias gd='git diff'
alias gdc='git diff --cached'
alias gds='git diff --staged'
alias gdt='git difftool'
alias gf='git fetch'
alias gl='git l'
alias gmt='git mergetool'
alias go='git checkout'
alias gop='git checkout -p'
alias gp='git pull'
alias gpp='git push'
alias gs='git status'
alias gr='git reset'
alias gg='git grep -n -i'

# Docker.
alias d=docker
alias dc='docker container'

# Tmux.
alias nater='tmuxinator'

# Development misc.
alias mochag='mocha -g'
alias mochaf='mocha -f'
alias isodate='date +%Y-%m-%dT%H:%M:%S%z'
alias isodateutc='date -u +"%Y-%m-%dT%H:%M:%SZ"'

# Misc.
alias nativefier='nativefier --fast-quit --hide-window-frame --maximize --single-instance'

viminfo () { vim -R -M -c "Info $1 $2" +only }
alias info=viminfo

alias notes="$(which notes)"
