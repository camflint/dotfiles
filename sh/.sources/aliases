# Editing.
alias vim=nvim
alias v=vim
alias fm='vifm .'

# Files.
alias f=find
alias rg='rg --hidden --smart-case'
alias ls='exa --icons'
alias la='ls -a'
alias ll='ls -l'
alias lla='ls -al'

# Git.
alias gc='git commit'
alias gcm='git commit -m'
alias go='git checkout'
alias gop='git checkout -p'
alias gs='git status'
alias ga='git add'
alias gap='git add -p'
alias gd='git diff'
alias gds='git diff --staged'
alias gl='git l'

# Docker.
alias d=docker
alias dc='docker container'

# Tmux.
alias nater='tmuxinator'

# Misc.
alias nativefier='nativefier --fast-quit --hide-window-frame --maximize --single-instance'
